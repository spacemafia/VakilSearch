<div class="widthcontrollertrial">
  <h4><%= link_to "Latest Articles", articles_path, class: "btn btn-primary articlebutton" %></h4>
  <div id="latestarticlestrial">
    <% @articles.find(:all, :limit => 1).each do |article| %>
        <div class="articlepostrial">
          <% article.tags.any? %>
          <% article.tags.find(:all, :limit => 1).each do |tag| %>
          <h5 class="btn btn-danger tag"><%= link_to tag.name, tagged_url(:tag => tag.name) %></h5>
          <% end %>
          <h2><%= link_to image_tag("family.jpg", :alt => "clubmahindra"), article_path(:id => article.id) %></h2>
          <h3><%= link_to truncate(article.title, :length => 45), article_path(:id => article.id) %></h3>
          <h4><%= truncate(article.deck, :length => 150) %></h4>
        </div>
      <% end %>
    <% @articles.find(:all, :limit => 2, :offset => 1).each do |article| %>
        <div class="articlepostrialtwo">
          <% article.tags.any? %>
          <% article.tags.find(:all, :limit => 1).each do |tag| %>
          <h4 class="tagtwo"><%= link_to tag.name, tagged_url(:tag => tag.name) %></h4></br></br>
          <% end %>
          <h3><%= link_to truncate(article.title, :length => 45), article_path(:id => article.id) %></h3>
          <h5><%= truncate(article.deck, :length => 90) %></h5>
        </div>
      <% end %>
  </div>
  <div id="complainttrial">
    <form role="formtrial">
     <div class="form-grouptrial">
      <h4><span class="glyphicon glyphicon-pushpin"></span>
        Affordable Legal Services</h4>
      <input type="name" class="form-controltrial" id="complaintformtrial" placeholder="What legal assistance do you need?">
      <h5><%= link_to "Incorporation", "http://www.vakilsearch.com/company-registration-private-limited-company-india" %> <span class="colourbar">|</span><%= link_to "Documentation", "http://www.vakilsearch.com/company-registration-private-limited-company-india" %> <span class="colourbar">|</span> <%= link_to "RTI", "http://www.vakilsearch.com/file-an-rti-application-online" %> <span class="colourbar">|</span> <%= link_to "Licenses", "http://www.vakilsearch.com/company-registration-private-limited-company-india" %> <span class="colourbar">|</span><%= link_to "Tax Filing", "http://www.vakilsearch.com/company-registration-private-limited-company-india" %> <span class="colourbar">|</span> <%= link_to "Auditing", "http://www.vakilsearch.com/company-registration-private-limited-company-india" %> </h5>
         <h5><%= link_to "Instant legal help", "http://www.vakilsearch.com", class: "btn btn-primary morebutton" %></h5>
          <h5>120,000+ happy customers</h5>
          <ul class="brandlist">
          <li><%= image_tag("logos.jpg", :alt => "Companies") %></li>
        </ul>
     </div>
    </form>
  </div>
</div>
<div class="widthcontrollermiddle">
  <div id="latestarticlesmiddle">
    <div class="floattest">
    <% @articles.find(:all, :limit => 2, :offset => 3).each do |article| %>
        <div class="articleposmiddle">
          <% article.tags.any? %>
          <% article.tags.find(:all, :limit => 1).each do |tag| %>
          <h5 class="tagthree"><%= link_to tag.name, tagged_url(:tag => tag.name) %></h5></br></br>
          <% end %>
          <h3><%= link_to truncate(article.title, :length => 45), article_path(:id => article.id) %></h3>
          <h6><%= truncate(article.deck, :length => 140) %></h6>
        </div>
      <% end %>
      </div>
        <% if signed_in? %>
        <div class="articleposmiddletwo">
          <%= link_to image_tag("micromaxsurvey.jpg", :alt => "Micromax Survey"), "http://www.vakilsearch.com/get-a-detailed-legal-opinion-from-an-expert" %>
        </div>
          <% else %>
        <div class="articleposmiddletwo">
          <%= link_to image_tag("micromaxsurvey.jpg", :alt => "Micromax Survey"), "http://www.vakilsearch.com/get-a-detailed-legal-opinion-from-an-expert" %>
        </div>
        <% end %>
  </div>
  <div id="complaintmiddle">
         <% if signed_in? %>
      <h3><span class="glyphicon glyphicon-plus-sign"></span>
        Ideas / Solutions / Impact</h3>
           <h6><%= render 'shared/user_info' %> following 
           <%= pluralize(User.find_by(:id => current_user.id).answers.sum(:cached_weighted_score) + User.find_by(:id => current_user.id).sectionones.sum(:cached_weighted_score) + User.find_by(:id => current_user.id).sectiontwos.sum(:cached_weighted_score) + User.find_by(:id => current_user.id).sectionthrees.sum(:cached_weighted_score) + User.find_by(:id => current_user.id).sectionfours.sum(:cached_weighted_score), "Total User Point") %></h6>
           <%= form_for(@question) do |f| %>
            <h5><%= render 'shared/error_messages', object: f.object %></h5>
          <div class="homepageform">
            <%= f.text_area :content, placeholder: "Query a wide network of lawyers, CAs and entrepreneurs", class: "form-controlhome" %>
            <%= f.text_area :morecontent, placeholder: "Got more to add?", class: "form-controlhome" %></br>
            <%= f.text_field :tag_list, placeholder: "Sector", style: "width: 210px;" %></br>
            <%= f.submit "Post", class: "btn btn-success postbutton" %>
          </div>
    <% end %>
           </section>
          </aside>
  </div>
    <% else %>
   <div class="Community-Support">
      <h4><span class="glyphicon glyphicon-bullhorn"></span>
        Expert Advice Exchange
        </h4>
       <h5>7,221 Queries <span class="colourbar">|</span> 23,572 Insights</h5>
        <%= form_for(:session, url: sessions_path) do |f| %>
        <div class="homepageformtwo">
        <%= f.label :email, class: "form-controlhome" %></br>
        <%= f.text_field :email, class: "form-controlhome" %></br>
        <%= f.label :password, class: "form-controlhome" %></br>
        <%= f.password_field :password, class: "form-controlhome" %>
        <%= f.submit "Sign in", class: "btn btn-success colorchange" %>
      </div>
    <% end %></br>
        <h6><%= link_to "Not a member? Sign up", signup_path %> </h6>
        <h6><%= link_to "1000s of professionals already have", signup_path %> </h6>
   </div>
  </div>
      <% end %>
</div>
<div class="widthcontrollerbottom">
  <h4><%= link_to "Latest Queries", questions_path, class: "btn btn-primary questionbutton" %></h4>
  <div id="latestquestionstrial">
    <% @questions.find(:all, :limit => 12).each do |question| %>
        <div class="questionpostrial">
          <% question.tags.any? %>
          <% question.tags.find(:all, :limit => 1).each do |tag| %>
          <h5 class="tagfour"><%= link_to tag.name, tagged_url(:tag => tag.name) %></h5></br></br>
          <% end %>
          <h4><%= link_to truncate(question.content, :length => 55), user_question_path(:email => question.user.id, :id => question.id) %></h4>
          <h6><%= truncate(question.morecontent, :length => 90) %></h6>
          <h3><%= time_ago_in_words(question.created_at) %> ago</h3>
        </div>
      <% end %>
  </div>
  <div id="hotanswers">
        <h3><span class="glyphicon glyphicon-stats"></span> TOP USER TIPS</h3>
        <% @answer.find(:all, :limit => 5).each do |answer| %>
      <div class="topusertips">
        <p><%= link_to truncate(answer.answer_content, :length => 50), user_question_path(:email => answer.id, :id => answer.question_id) %>
          Score: <%= answer.cached_weighted_score %></p>
        <h6><%= answer.user.name %></h6>
      </div>
    <% end %>
   </div>
</div>