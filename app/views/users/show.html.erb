<% provide(:title, @user.name) %>
<div class="showquestion">
      <h2>
        <%= @user.name %>
      </h2>
  <% if @tally >= 10 %>
  <%= "Super User" %>
  <% else %>
  <%= "Early User" %>
  <% end %>
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal1">
  Following
</button>

<!-- Modal -->
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <% @user.followed_questions.each do |question| %>
      <div class="modal-body">
        <p><%= link_to question.content, user_question_path(:email => question.user.id, :id => question.id) %></p>
         </div>
          <p>Answers: <%= question.answers.count %></p>
          <% question.answers.each do |answer| %>
          <% if @user.updated_at <= answer.created_at %> 
          <%= answer.answer_content %>
          <% end %>
          <% end %>
          <% end %>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
  <h3>Questions</h3>
        <% @questions.each do |question| %>

      <div class="userquestionindex">
        <h3><%= link_to question.content, user_question_path(:email => question.user.id, :id => question.id) %></h3>
      </div>
      <p>
          <% question.tags.any? %>
            Category:
          <% question.tags.each do |tag| %>
          <%= link_to tag.name, tagged_url(:tag => tag.name) %>
            <% end %>
            Created: 
        <%= time_ago_in_words(question.created_at) %> ago 
       <% if current_user.admin? && !current_user?(question) %>
          <%= link_to 'Edit', edit_question_path(question) %>
          <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %></p>

<% end %>
<%= will_paginate @questions, renderer: BootstrapPagination::Rails %>
</div>

      <% @user.followed_questions.each do |question| %>
        <p><%= link_to question.content, user_question_path(:email => question.user.id, :id => question.id) %></p>
          <p>Answers: <%= question.answers.count %></p>
          <% question.answers.each do |answer| %>
          <% if answer.created_at > @user.updated_at %>
          <%= answer.answer_content %> 
          <% end %>
          <% end %>
          <% end %>