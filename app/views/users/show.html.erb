<% provide(:title, @user.name) %>
<div class="showquestion">
      <h2>
        <%= @user.name %>
      </h2>
  <% if @tally >= 10 %>
  <%= "Super User" %>
  <% else %>
  <%= "Early User" %>
  <% end %>
  <div class="followingquestions">
      <h2>Following</h2>
            <% @user.followed_questions.each do |question| %>
          <div class="followingquestionsindex">
            <h3><%= link_to question.content, user_question_path(:email => question.user.id, :id => question.id) %></h3>
         </div>
          <p>Answers: <%= question.answers.count %></p>
        <% end %>
     </div>

  <h3>Questions</h3>
        <% @questions.each do |question| %>

      <div class="userquestionindex">
        <h3><%= link_to question.content, user_question_path(:email => question.user.id, :id => question.id) %></h3>
      </div>
      <p>
          <% question.tags.any? %>
            Category:
          <% question.tags.each do |tag| %>
          <%= link_to tag.name, tagged_url(:tag => tag.name) %>
            <% end %>
            Created: 
        <%= time_ago_in_words(question.created_at) %> ago 
       <% if current_user.admin? && !current_user?(question) %>
          <%= link_to 'Edit', edit_question_path(question) %>
          <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %></p>

<% end %>
<%= will_paginate @questions, renderer: BootstrapPagination::Rails %>
</div>

